<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">19dp</item>
        <item name="iconPadding">10dp</item>

    </style>
    <style name="textMainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>

    </style>

    <style name="SettingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextSettingsStyle">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="thumbTint">@color/yp_text_gray</item>
        <item name="trackTint">@color/yp_light_gray</item>
    </style>

    <style name="SearchBackButtonStyle">
        <item name="iconTint">@color/yp_black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="background">@color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="backgroundTint">@color/yp_light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>

    </style>

    <style name="TrackItemBottomText">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">"@font/ys_display_regular"</item>
    </style>

    <style name="NotFoundImageStyle">
        <item name="android:src">@drawable/placeholder_not_foud_l</item>
    </style>

    <style name="NotInternetImageStyle">
        <item name="android:src">@drawable/placeholder_no_internet_l</item>
    </style>

    <style name="TextErrorStyle">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="UpdateButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="backgroundTint">@color/yp_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="main">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="player_main">
        <item name="android:background">@color/white</item>
    </style>

    <style name="player_main_text">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="player_text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="play_button">
        <item name="android:tint">@color/yp_black</item>
    </style>

    <style name="refresh_button_style">
        <item name="backgroundTint">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="player_back_button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="tab_style">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="bottom_nav_view">
        <item name="itemIconTint">@drawable/bottom_nav_selector_light</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_light</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>

